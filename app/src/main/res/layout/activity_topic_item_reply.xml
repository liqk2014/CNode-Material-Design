<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/topic_item_reply_img_avatar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/image_placeholder" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/topic_item_reply_tv_login_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_primary"
                    android:textSize="16sp"
                    tools:text="TakWolf" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/topic_item_reply_tv_index"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_accent"
                        android:textSize="14sp"
                        android:singleLine="true"
                        tools:text="1楼" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:text="@string/$dot"
                        android:textColor="@color/text_color_secondary"
                        android:textSize="14sp"
                        android:singleLine="true" />

                    <TextView
                        android:id="@+id/topic_item_reply_tv_create_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_secondary"
                        android:textSize="14sp"
                        android:singleLine="true"
                        tools:text="1小时前" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/topic_item_reply_btn_ups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:drawableStart="@drawable/main_nav_ic_good_grey_24dp"
                    android:drawableLeft="@drawable/main_nav_ic_good_grey_24dp"
                    android:drawablePadding="8dp"
                    android:textColor="@color/text_color_secondary"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/selectable_item_background"
                    tools:text="12" />

                <ImageView
                    android:id="@+id/topic_item_reply_btn_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/ic_reply_grey600_24dp"
                    android:scaleType="center"
                    android:background="@drawable/selectable_item_background" />

            </LinearLayout>

        </LinearLayout>

        <org.cnodejs.android.md.ui.widget.CNodeWebView
            android:id="@+id/topic_item_reply_web_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

    </LinearLayout>

    <View style="@style/AppTheme.DeepLine"
        android:id="@+id/topic_item_reply_icon_deep_line" />

    <View style="@style/AppTheme.ShadowGap"
        android:id="@+id/topic_item_reply_icon_shadow_gap" />

</LinearLayout>
